<% if message.user == current_user %>
          <div id="chat-right">
            <div class="user-name"><%= message.user.first_name %></div><div class="message-time"><%= message.created_at %></div>
            <br>
            <div class="message-content"><%= message.content %></div>
          </div>
        <% else %>

          <div id="chat-left">
            <div class="user-name"><%= message.user.first_name %></div><div class="message-time"><%= message.created_at %></div>
            <br>
            <div class="message-content"><%= message.content %></div>
            <br>
          </div>


        <% end %>
