<%= render 'shared/header' %>
<div class= "container">
  <div class="messages-container">
    <div class="message-overview">
      <% @bookings.each do |booking| %>
      <div class="message-preview">
        <div class="user-info">
          <div class="user"><%= link_to booking.user.first_name, booking_messages_path(booking.id) %></div>
          <div class="date"><%= booking.created_at %></div>
        </div>
        <div class="message-title"> <%= booking.market.title %> </div>
      </div>
      <% end %>
    </div>
    <div class="chat" >
      <div class="messages"  id='messages'  data-booking-id="<%= @booking.id %>" >
        <% @booking.messages.each do |message| %>
        <%= render 'message', message: message %>
        <br>
        <% end %>
      </div>
 
      <%= simple_form_for [ @booking, @message ], remote: true do |f| %>
        <div class="messages">
          <%= f.input :content, label: false, class:"message-input", placeholder: "Start to chat!" %>
        </div>
      <div class="handshake">
        <%= link_to "Handshake", "#", class: "btn-solid-red" %>
        <%= f.button :submit, class: 'btn-line-red'  %>
      </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
<div class="bottom"></div>
