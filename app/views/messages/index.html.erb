<%= render 'shared/header' %>
<div class= "container">
  <div class="messages-container">
    <div class="message-overview" id= "bookings-overview">
      <%= render 'bookings', bookings: @bookings %>
    </div>
    <div class="chat" >
      <div class="messages"  id='messages'  data-booking-id="<%= @booking.id %>" >
        <% @booking.messages.each do |message| %>
        <%= render 'message', message: message %>
        <br>
        <% end %>
      </div>

      <%= simple_form_for [ @booking, @message ], remote: true do |f| %>
        <div class="messages">
          <%= f.input :content, label: false, class:"message-input", placeholder: "Start to chat!" %>
        </div>
      <div class="handshake">
        <%= link_to "Handshake", "#", class: "btn-solid-red" %>
        <%= f.button :submit, class: 'btn-line-red'  %>
      </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
<div class="bottom"></div>
