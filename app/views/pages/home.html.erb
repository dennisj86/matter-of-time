<div class="banner banner-content banner-img">
  <div class="banner-text">
      <h1>Some catchy phrase <br>to get the users <br>attention.</h1>
      <%= link_to "Search", "#", class: "btn-solid-red" %>
  </div>

  <div class="container">
    <div class="headline">
      <h2 class= "">Discover our wonderful offers</h2>
    </div>
    <div class="filter-container">
      <%= link_to "Remote", "#", class: "filter-links" %>
      <%= link_to "Recommended", "#", class: "filter-links" %>
      <%= link_to "New", "#", class: "filter-links" %>
      <%= link_to "Staff pick", "#", class: "filter-links" %>
    </div>

    <div class="four-cards mt-3">
      <% markets = Market.limit(4).order("RANDOM()") %>
      <% markets.each do |market| %>
        <div class="card-trip">
          <%= image_tag "image-from-rawpixel-id-2627377-original.jpg" %>
          <div class="card-trip-infos">
            <div class= "card-title">
              <h2><%= link_to market.title, market_path(market) %></h2>
              <h2>Time Here</h2>
            </div>
            <div>
              <i class="fas fa-heart card-trip-user"></i>
              <p><%= market.description %></p>
            </div>
            <%= button_to "See Details", market_path(market), :class => "btn-line-red card-btn btn-block", :method => :get %>
            <br>
          </div>
        </div>
      <% end  %>
    </div>
  </div>
</div>
